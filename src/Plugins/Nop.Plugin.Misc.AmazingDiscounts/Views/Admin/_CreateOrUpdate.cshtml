@model AmazingDiscountProductModel

@if (Model.Id > 0)
{
    <input asp-for="Id" type="hidden" />
}

<div class="content">
    <div class="form-horizontal">
        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ProductId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ProductId" />
                        <span asp-validation-for="ProductId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="CustomLabel" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CustomLabel" />
                        <span asp-validation-for="CustomLabel"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="DisplayOrder" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DisplayOrder" />
                        <span asp-validation-for="DisplayOrder"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="StartDateUtc" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="StartDateUtc" />
                        <span asp-validation-for="StartDateUtc"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="EndDateUtc" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="EndDateUtc" />
                        <span asp-validation-for="EndDateUtc"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
