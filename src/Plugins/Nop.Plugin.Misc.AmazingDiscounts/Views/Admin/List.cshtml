@model AmazingDiscountSearchModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Plugins.Misc.AmazingDiscounts.PageTitle").Text;
    NopHtml.SetActiveMenuItemSystemName("Catalog");
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Plugins.Misc.AmazingDiscounts.PageTitle")
    </h1>
    <div class="float-right">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-square"></i>
            @T("Admin.Common.AddNew")
        </a>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="cards-group">
            <div class="card card-default">
                <div class="card-body">
                    @await Html.PartialAsync("Table", new DataTablesModel
                    {
                        Name = "amazing-discounts-grid",
                        UrlRead = new DataUrl("List", "AmazingDiscountAdmin", null),
                        Length = Model.PageSize,
                        LengthMenu = Model.AvailablePageSizes,
                        ColumnCollection = new List<ColumnProperty>
                        {
                            new ColumnProperty(nameof(AmazingDiscountProductModel.ProductName))
                            {
                                Title = T("Plugins.Misc.AmazingDiscounts.Fields.Product").Text
                            },
                            new ColumnProperty(nameof(AmazingDiscountProductModel.CustomLabel))
                            {
                                Title = T("Plugins.Misc.AmazingDiscounts.Fields.CustomLabel").Text
                            },
                             new ColumnProperty(nameof(AmazingDiscountProductModel.DisplayOrder))
                            {
                                Title = T("Plugins.Misc.AmazingDiscounts.Fields.DisplayOrder").Text,
                                Width = "100"
                            },
                            new ColumnProperty(nameof(AmazingDiscountProductModel.Id))
                            {
                                Title = T("Admin.Common.Edit").Text,
                                Width = "100",
                                ClassName = NopColumnClassDefaults.Button,
                                Render = new RenderButtonEdit(new DataUrl("Edit"))
                            }
                        }
                    })
                </div>
            </div>
        </div>
    </div>
</section>
