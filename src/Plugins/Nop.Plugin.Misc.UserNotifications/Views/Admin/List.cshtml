@model AnnouncementSearchModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Plugins.Misc.UserNotifications.Announcements").Text;
    NopHtml.SetActiveMenuItemSystemName("Promotions");
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Plugins.Misc.UserNotifications.Announcements")
    </h1>
    <div class="float-right">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-square"></i>
            @T("Admin.Common.AddNew")
        </a>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="cards-group">
            <div class="card card-default">
                <div class="card-body">
                    @await Html.PartialAsync("Table", new DataTablesModel
                    {
                        Name = "announcements-grid",
                        UrlRead = new DataUrl("List", "UserNotifications", null),
                        Length = Model.PageSize,
                        LengthMenu = Model.AvailablePageSizes,
                        ColumnCollection = new List<ColumnProperty>
                        {
                            new ColumnProperty(nameof(AnnouncementModel.Title))
                            {
                                Title = T("Plugins.Misc.UserNotifications.Fields.Title").Text
                            },
                            new ColumnProperty(nameof(AnnouncementModel.StartDateUtc))
                            {
                                Title = T("Plugins.Misc.UserNotifications.Fields.StartDateUtc").Text,
                                Width = "200",
                                Render = new RenderDate()
                            },
                            new ColumnProperty(nameof(AnnouncementModel.EndDateUtc))
                            {
                                Title = T("Plugins.Misc.UserNotifications.Fields.EndDateUtc").Text,
                                Width = "200",
                                Render = new RenderDate()
                            },
                            new ColumnProperty(nameof(AnnouncementModel.IsPublished))
                            {
                                Title = T("Plugins.Misc.UserNotifications.Fields.IsPublished").Text,
                                Width = "100",
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Render = new RenderBoolean()
                            },
                            new ColumnProperty(nameof(AnnouncementModel.Id))
                            {
                                Title = T("Admin.Common.Edit").Text,
                                Width = "100",
                                ClassName = NopColumnClassDefaults.Button,
                                Render = new RenderButtonEdit(new DataUrl("Edit"))
                            }
                        }
                    })
                </div>
            </div>
        </div>
    </div>
</section>
